{
    "manifest_version" : 3,
    "version" : "1.0.0",
    "name" : "Allerfree",
    "icons": {
        "32" : "AllerFree_Logo.png"
    },

    "action": {
        "default_popup": "index.html"
    },
    "permissions": ["scripting", "tabs", "activeTab", "storage"],
    "background":{
        "service_worker": "/background/service-worker.js",
        "type": "module"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
    {
      "matches": ["https://www.google.com/maps/*"],
      "js": [
        "content/utils.js",
        "content/dom.js",
        "content/menu-scrape.js",
        "content/restaurant.js",
        "content/menu.js",
        "content/index.js"
      ],
      "run_at": "document_idle",
      "all_frames": false,
      "css": ["button.css"]
    }
  ]
}
  


  
    
  